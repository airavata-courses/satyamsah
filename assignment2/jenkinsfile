node {
   stage('Preparation') { // for display purposes
      // Get some code from a GitHub repository
      checkout(
          [$class: 'GitSCM', 
          branches: [[name: 'v2_newdockerized']], 
          doGenerateSubmoduleConfigurations: false, 
          extensions: [], 
          submoduleCfg: [], 
          userRemoteConfigs: [[url: 'https://github.com/airavata-courses/satyamsah.git']]
          ]
        )
   }
   
   stage('Clean'){
       sshagent (credentials: ['PK']) {
            sh 'ssh -o StrictHostKeyChecking=no -l satyam1 129.114.17.65 rm -rf /home/satyam1/assignment2'
            sh 'scp -r "/var/lib/jenkins/workspace/tttty/assignment2" satyam1@129.114.17.65:/home/satyam1/assignment2'
        }
    }
       
  
   stage('Build') {
      sshagent (credentials: ['PK']) {
             sh 'ssh -o StrictHostKeyChecking=no -l satyam1 129.114.17.65 "cd ~/assignment2; sudo bash build.sh"'

    }
   }
}
